<% if @order.errors.any? %>
  <h1>There was a problem with your order!</h1>
  <ul>
    <% @order.errors.full_messages.each do |message| %>
      <li> <%= message %></li>
    <% end %>
  </ul>
  <%= link_to "Try again", controller: "orders", action: "new" %>
<% else %>
  <h1>Order Placed!</h1>
  Here are your order details:
  <ul>
    <li>Name: <%= @order.customer_name %></li>
    <li>Address: <%= @order.customer_address %></li>
  </ul>
  <ul>
    <li>Price: <%= @order.price %></li>
    <li>Discount: <%= @order.discount %></li>
    <li>Tax: <%= @order.tax %></li>
    <li>Total: <%= @order.total %></li>
  </ul>
  <%= link_to "Back to Homepage", '/' %>
<% end %>